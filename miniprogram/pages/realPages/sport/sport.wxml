<!--miniprogram/pages/realPages/sport/sport.wxml-->

<view class="outest_navbar">
  <view class="navbar">
    <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">{{item}}</text>
  </view>
</view>

<view hidden="{{currentTab!==0}}" class='fir_page' style="z-idnex:5">
  <view scroll-y = "true ">
    <view class = "item-content" wx:for="{{sport_list}}" wx:for-item = "item" wx:for-index="current_index" >
      <view class="detail" bindtap="showModal" data-id="{{item._id}}" data-name="{{item.name}}" data-heat="{{item.heat}}" data-icon_url="{{item.icon_url}}" data-target="bottomModal">
        <image src="{{item.icon_url}}" class="icon" mode="aspectFit"></image>
        <view class="name_style"> {{item.name}} </view>
        <view class="heat_style"> {{item.heat}}</view>
        <view class="qianka">千卡/60分钟</view>
      </view>
      <view class="div_line"> </view>
    </view>
  </view>
</view>

<view hidden="{{currentTab!==1}}" class='third_page' style="z-idnex:5">
  <view scroll-y = "true">
    <view class="add_self" bindtap="add_user_def" data-target="addition">⊕添加自定义运动</view>
    <view class = "item-content" wx:for="{{user_sport_list}}" wx:for-item = "item" wx:for-index="current_index" >
      <view class="detail" bindlongpress="delete_item" bindtap="showModal" data-name="{{item.name}}" data-heat="{{item.heat}}" data-icon_url="{{item.icon_url}}" data-target="bottomModal">
        <image src="{{item.icon_url}}" class="icon" mode="aspectFit"></image>
        <view class="name_style"> {{item.name}} </view>
        <view class="heat_style"> {{item.heat}}</view>
        <view class="qianka">千卡/60分钟</view>
      </view>
      <view class="div_line"> </view>
    </view>
  </view>
</view>

<view class="cu-modal {{modalName=='addition'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">添加自定义运动</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
      <form>
        <view class="cu-form-group margin-top">
          <view class="title">运动名称 </view>
          <input placeholder="如：走路、跑步" bindinput="user_define_name"></input>
        </view>
        <view class="cu-form-group margin-bottom" >
          <view class="title">1小时耗热</view>
          <input placeholder="如：100（单位千卡）" bindinput="user_define_heat"></input>
        </view>
      </form>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <view class="cu-btn bg-green margin-left" bindtap="user_define">确定</view>
      </view>
    </view>
  </view>
</view>

<view class="cu-modal bottom-modal {{modalName=='bottomModal'?'show':''}}">
  <view class="cu-dialog"  style="background-color:white">
    <view class="cu-bar bg-white">
      <view class="action text-green" bindtap="addData">确定</view>
      <view class="selection">
        <picker mode="multiSelector" bindchange="bindMultiPickerChange"  value="{{multiIndex}}" range="{{multiArray}}">
          <view class="picker">
            {{multiArray[0][multiIndex[0]]}}
          </view>
        </picker>
      </view>
      <view class="action text-blue" bindtap="hideModal">取消</view>
    </view>
    <view class="detail">
      <image src="{{sport_icon}}" class="icon" mode="aspectFit"></image>
      <view class="name_style1"> {{sport_name}} </view>
      <view class="heat_style1"> {{sport_heat}}</view>
      <view class="qianka">千卡/60分钟</view>
    </view>
    <view class='input_stuff'>
      <view class="input_num_show">{{current_st}}</view>
      <view class='current_st'>分钟:消耗{{current_heat}}千卡</view>
    </view>
    <view style="background-color:white">__________________</view> 
    <view class='keyboard-row'>
      <button class='num_input' data-key='1'  bindtap='tapKey'>1</button>
      <button class='num_input' data-key='2' bindtap='tapKey'>2</button>
      <button class='num_input' data-key='3' bindtap='tapKey'>3</button>
    </view>
    <view class='keyboard-row'>
      <button class='num_input' data-key='4' bindtap='tapKey'>4</button>
      <button class='num_input' data-key='5' bindtap='tapKey'>5</button>
      <button class='num_input' data-key='6' bindtap='tapKey'>6</button>
    </view>
    <view class='keyboard-row'>
      <button class='num_input' data-key='7' bindtap='tapKey'>7</button>
      <button class='num_input' data-key='8' bindtap='tapKey'>8</button>
      <button class='num_input' data-key='9' bindtap='tapKey'>9</button>
    </view>
    <view class='keyboard-row'>
      <button class='num_input' bindtap='tapC'>C</button>
      <button class='num_input' data-key='0' bindtap='tapKey'>0</button>
      <button class='num_input' bindtap='tapDel'>←</button>
    </view>
  </view>
</view>

<view class="cu-modal bottom-modal {{modalName=='delete'?'show':''}}">
  <view class="cu-dialog"  style="background-color:white">
    <view class="cu-bar bg-white">
      <view class="action text-green" bindtap="delete_data">确定</view>
      <view class="action text-blue" bindtap="hideModal">取消</view>
    </view>
    <view class="padding-xl">
      是否删除该项自定义数据？
    </view>
  </view>
</view>